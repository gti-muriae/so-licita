{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/routes.js",
    "src/config/s3.config.js",
    "src/config/mail.config.JS"
  ],
  "exclude": [
    "node_modules"
  ]
}